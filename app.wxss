/**app.wxss**/
.container {
  width: 100%;
} 
.footer{
  width: 100%;
  height: 60px;
  border-top: 1px solid #d9d9d9;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-content: center;
  color: #d9d9d9;
}
.footer view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footer image{
  width: 25px;
  height: 25px;
}
.footer text{
  font-size: 14px;
  padding-top: 3px;
  color:#d9d9d9;
}