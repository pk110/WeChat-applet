.map_container {
  width: 100%;
  height: 900rpx;
}

.map_container_input {
  position: fixed;
  top: 0;
  border: 1px solid #dcdcdc;
  width: 90%;
  border-radius: 5px;
  box-sizing: border-box;
  margin: 5px 15px;
  padding: 5px 15px;
  background: #fff;
  color: gray;
}

.map_container_input input {
  width: 100%;
  height: 100%;
}

.map_container_bike {
  position: fixed;
  top: 750rpx;
  margin-left: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.map_container_img {
  width: 80rpx;
  height: 80rpx;
  animation-name: breath;
  animation-duration: 2s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

.map_container_biking {
  padding: 5px 10px;
  text-align: center;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  font-size: 14px;
  border-radius: 20rpx;
}

.map_container_pause {
  position: fixed;
  top: 650rpx;
  margin-left: 20px;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 14px;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
  animation: foolishOut 1s ease;
}

.map_container_myaddress {
  width: 70rpx;
  height: 70rpx;
  position: fixed;
  top: 550rpx;
  margin-left: 19px;
  opacity: 0.8;
}

.map {
  height: 100%;
  width: 100%;
}

.place_info {
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: center;
  padding-bottom: 10px;
}

.place_info text {
  display: block;
  margin: 0 auto;
  font-size: 15px;
}

/*动画*/

@keyframes breath {
 0% {
     transform:scale(1,1);
    -ms-transform:scale(1,1); 	/* IE 9 */
    -moz-transform:scale(1,1); 	/* Firefox */
    -webkit-transform:scale(1,1); /* Safari 和 Chrome */
    -o-transform:scale(1,1); 
    border-radius:10px;
    box-shadow: 0 0 0px 	#000000;
  }

  20% {
           transform:scale(0.95,0.95);
    -ms-transform:scale(0.95,0.95); 	/* IE 9 */
    -moz-transform:scale(0.95,0.95); 	/* Firefox */
    -webkit-transform:scale(0.95,0.95); /* Safari 和 Chrome */
    -o-transform:scale(0.95,0.95); 
      border-radius:9.5px;
    box-shadow: 0 0 1.5px 	#000000;
  }

  40% {
           transform:scale(0.9,0.9);
    -ms-transform:scale(0.9,0.9); 	/* IE 9 */
    -moz-transform:scale(0.9,0.9); 	/* Firefox */
    -webkit-transform:scale(0.9,0.9); /* Safari 和 Chrome */
    -o-transform:scale(0.9,0.9); 
      border-radius:9px;
    box-shadow: 0 0 3px 	#000000;
  }

  60% {
           transform:scale(0.85,0.85);
    -ms-transform:scale(0.85,0.85); 	/* IE 9 */
    -moz-transform:scale(0.85,0.85); 	/* Firefox */
    -webkit-transform:scale(0.85,0.85); /* Safari 和 Chrome */
    -o-transform:scale(0.85,0.85); 
      border-radius:8.5px;
    box-shadow: 0 0 4.5px 	#000000;
  }

  80% {
           transform:scale(0.8,0.8);
    -ms-transform:scale(0.8,0.8); 	/* IE 9 */
    -moz-transform:scale(0.8,0.8); 	/* Firefox */
    -webkit-transform:scale(0.8,0.8); /* Safari 和 Chrome */
    -o-transform:scale(0.8,0.8);
      border-radius:8px;
    box-shadow: 0 0 6px 	#000000;
  }

  100% {
           transform:scale(0.75,0.75);
    -ms-transform:scale(0.75,0.75); 	/* IE 9 */
    -moz-transform:scale(0.75,0.75); 	/* Firefox */
    -webkit-transform:scale(0.75,0.75); /* Safari 和 Chrome */
    -o-transform:scale(0.75,0.75);
      border-radius:7.5px;
    box-shadow: 0 0 7.5px 	#000000;
  }
}

